<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">
    <EditText
        android:id="@+id/editCategoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Category Name" />

    <EditText
        android:id="@+id/editCategoryDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editCategoryName"
        android:hint="Category Description" />

    <Button
        android:id="@+id/addCategoryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editCategoryDesc"
        android:layout_weight="1"
        android:layout_centerInParent="true"
        android:text="Add" />


    <TextView
        android:id="@+id/textCategoryView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addCategoryButton"
        android:text="Categories"
        android:textAlignment="center"
        />

    <ListView
        android:id="@+id/listViewCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textCategoryView">
    </ListView>
</RelativeLayout>